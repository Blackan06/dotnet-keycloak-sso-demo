@page "/"
@attribute [Authorize]

<h1>Home</h1>

<AuthorizeView>
    <Authorized>
        <p>Xin chào @context.User.Identity?.Name!</p>

        <h3>Claims</h3>
        <ul>
            @foreach (var c in context.User.Claims)
            {
                <li>@c.Type = @c.Value</li>
            }
        </ul>
        <a href="logout">Logout</a>
    </Authorized>

    <NotAuthorized>
        <p>Bạn chưa đăng nhập.</p>
        <a href="login">Đăng nhập</a>
    </NotAuthorized>
</AuthorizeView>
